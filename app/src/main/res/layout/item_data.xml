<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_dale"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            <androidx.appcompat.widget.AppCompatImageView-->
            <!--                android:id="@+id/shapeable_img"-->
            <!--                android:layout_width="50dp"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:layout_margin="5dp"-->
            <!--                android:background="@drawable/rounder"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toBottomOf="@id/img_dale" />-->

            <TextView
                android:id="@+id/text_vid_name"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_dale"
                tools:text="The Beauty of Existence - Heart Touching Nasheed" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@drawable/baseline_more_vert_24"
                app:layout_constraintStart_toEndOf="@id/text_vid_name"
                app:layout_constraintTop_toBottomOf="@id/img_dale" />

            <TextView
                android:id="@+id/people_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="numberDecimal"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/text_vid_name"
                app:layout_constraintTop_toBottomOf="@id/text_vid_name"
                tools:ignore="TextViewEdits"
                tools:text="18,789.098" />

            <TextView
                android:id="@+id/views_jul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/viewsjul_1"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/people_watch"
                app:layout_constraintTop_toBottomOf="@id/text_vid_name" />

            <TextView
                android:id="@+id/year_of_issue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/views_jul"
                app:layout_constraintTop_toBottomOf="@id/text_vid_name"
                tools:text="2017" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>